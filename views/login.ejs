<%- include("./partials/header.ejs") -%> 

<div class="container">
    <div class="login-container">
        <div class="top">
            <a href="/twitter/signup"><i class="fa-regular fa-xmark close"></i></a>
            <i class="fa-brands fa-twitter"></i>
        </div>
        <div class="login-main">
            <h4>Sign in to Twitter</h4>
            <form action="/twitter/login" method="post">
                <input type="text" name="email" placeholder="Phone, email, or username" required>
                <input type="password" name="password" placeholder="Password" required>
                <input class="sbmt" type="submit" value="Next">
                <a class="fp" href="">Forgot password?</a>
            </form>
            
            <p>Don't have an account? <a href="/twitter/register">Sign up</a></p>
        </div>
    </div>
</div>
    

